@page "/CarSearch"

@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="centerCarSearch">
    <h1 class="CarSearchHeader">Car Search</h1>


    <div class="CarSearchBox">
        <EditForm Model="@searchModel" OnValidSubmit="@HandleSeach">
            <DataAnnotationsValidator />
            <div>
                <h4>Enter a vehicle number plate.</h4>
            </div>

            <div class="CarSearchStatus">
                <ValidationMessage For="@(() => searchModel.searchString)" />
                <h7>@test</h7>
            </div>

            <div>
                <label for="name"></label>
                <InputText id="name" @bind-Value="@searchModel.searchString" MaxLength="50" />
            </div>
      

            <div class="CarSearchButton">
                <button class="button1" type="submit">Search</button>
                <button class="button1" @onclick="Goback">Go Back</button>
            </div>
        </EditForm>
    </div>
</div>


